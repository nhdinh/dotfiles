#!/usr/bin/env bash

# Adapt the display layout if needed

# Workstation
if [[ $(xrandr --listmonitors | grep DP-0) ]]; then
    sleep 3
    xrandr --output DP-0 --primary --mode 1920x1080 --pos 1920x0 \
        --output DP-2 --mode 1920x1080 --pos 0x0
    i3-msg restart
fi

# Laptop
if [[ $(xrandr --listmonitors | grep DP1-2) ]]; then
    xrandr --output DP1-1 --left-of eDP1
    xrandr --output DP1-2 --left-of DP1-1
    i3-msg restart
fi

# Set the wallpaper
feh --bg-scale ~/.dotfiles/wallpaper/blurred.jpg

# Setup default applications
i3-msg exec "xautolock -time 5 -corners --00 -locker 'i3lock-fancy -p'"
i3-msg exec compton
i3-msg exec dunst
i3-msg exec nm-applet
i3-msg exec unclutter

i3-msg exec "alacritty -e tmux new-session -s work fish -C 'vim +PlugUpgrade +PlugUpdate +qa!'"
i3-msg exec chromium
i3-msg exec thunderbird
i3-msg exec hexchat
