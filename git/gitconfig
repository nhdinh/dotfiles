[include]
    path = ~/.gitconfig_user
[alias]
    d = difftool
    s = status
    p = pull
    c = clone
    b = branch
    co = checkout
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
[merge]
    tool = vimdiff
[mergetool]
    prompt = false
[push]
    default = upstream
[diff]
    tool = vimdiff2
[difftool]
    prompt = false
[http]
    postBuffer = 524288000
[core]
    editor = vim
    excludesfile = ~/.gitignore_global
[color]
    ui = auto
[pull]
    rebase = true
[rebase]
    autostash = true
[gitreview]
    remote = origin
[rerere]
    enabled = 1
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
